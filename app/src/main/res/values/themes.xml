<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <style name="CalcButton" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:shape">oval</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="iconSize">20dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalcButton.Number" parent="CalcButton">
        <item name="backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CalcButton.Operator" parent="CalcButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CalcButton.Function" parent="CalcButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="CalcButton.Equals" parent="CalcButton">
        <item name="backgroundTint">?attr/colorTertiary</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
    </style>
</resources>