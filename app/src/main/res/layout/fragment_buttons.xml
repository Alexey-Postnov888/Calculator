<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="5">

    <Button
        android:id="@+id/clearAllBtn"
        android:tag="function"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="AC"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Function" />

    <Button
        android:id="@+id/backspaceBtn"
        android:tag="function"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="←"
        app:layout_column="1"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Function" />

    <Button
        android:id="@+id/percentBtn"
        android:tag="operator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        app:layout_column="2"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Function"/>

    <Button
        android:id="@+id/divisionBtn"
        android:tag="operator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        app:layout_column="3"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Operator"/>


    <Button
        android:id="@+id/sevenBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        app:layout_column="0"
        app:layout_row="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number"/>

    <Button
        android:id="@+id/eightBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        app:layout_column="1"
        app:layout_row="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/nineBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        app:layout_column="2"
        app:layout_row="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/multiplyBtn"
        android:tag="operator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="×"
        app:layout_column="3"
        app:layout_row="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Operator" />


    <Button
        android:id="@+id/fourBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        app:layout_column="0"
        app:layout_row="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/fiveBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        app:layout_column="1"
        app:layout_row="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/sixBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        app:layout_column="2"
        app:layout_row="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/minusBtn"
        android:tag="operator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        app:layout_column="3"
        app:layout_row="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Operator"/>


    <Button
        android:id="@+id/oneBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        app:layout_column="0"
        app:layout_row="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/twoBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        app:layout_column="1"
        app:layout_row="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/threeBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        app:layout_column="2"
        app:layout_row="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/plusBtn"
        android:tag="operator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        app:layout_column="3"
        app:layout_row="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Operator"/>


    <Button
        android:id="@+id/zeroBtn"
        android:tag="number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        app:layout_column="0"
        app:layout_row="4"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number"/>

    <Button
        android:id="@+id/separatorBtn"
        android:tag="operator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        app:layout_column="2"
        app:layout_row="4"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Number" />

    <Button
        android:id="@+id/equalsBtn"
        android:tag="function"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        app:layout_column="3"
        app:layout_row="4"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="4dp"
        style="@style/CalcButton.Equals"/>

</androidx.gridlayout.widget.GridLayout>