<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:text="Калькулятор"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/display_txtview"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/dispaly_background"
        android:gravity="center_vertical|end"
        android:padding="20dp"
        android:textIsSelectable="true"
        android:textSize="50sp"
        android:maxLines="1"
        android:ellipsize="none"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeStepGranularity="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/app_title"
        app:layout_constraintTop_toBottomOf="@id/app_title" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/buttons_fragment"
        android:name="ru.alexeypostnov.calculator.ButtonsFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/display_txtview"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintStart_toStartOf="@id/display_txtview"
        app:layout_constraintTop_toBottomOf="@id/display_txtview" />

</androidx.constraintlayout.widget.ConstraintLayout>